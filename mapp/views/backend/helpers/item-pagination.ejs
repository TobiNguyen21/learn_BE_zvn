<% paginationHelper=(collection,pagination,keyWordSearch,status)=>{
    //console.log({pagination,keyWordSearch,status});

    const {totalItems,totalPages,limit,currentPage,pageRanges}=pagination;
    const ad = systemConfig.prefixAdmin;

    let link = `/${ad}/${collection}/status/${status}`;
    if(keyWordSearch !== '') link += '?keyWordSearch=' + keyWordSearch + '&page=';
    else link += '?page=';

    let xhtmlPages = '';
    for(let i=1;i<=totalPages;i++){ if(i===currentPage){ xhtmlPages +=`<li class="active page-item"><a
            class="page-link">${i}</a>
        </li>`
        }else{
        xhtmlPages +=`<li class="page-item"><a class="page-link" href="${link}${i}">${i}</a></li>`;
        }
        }

        return ` <ul class="pagination pagination-sm m-0 float-right">
            <li class="page-item"><a class="page-link" href="${link}1">&laquo;</a></li>
            ${xhtmlPages}
            <li class="page-item"><a class="page-link" href="${link}${totalPages}">&raquo;</a></li>
        </ul>`
        }

        %>